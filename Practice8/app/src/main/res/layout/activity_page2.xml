<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_page2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8DDFB"
    tools:context="com.example.hosein.practice8.Page2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/list"
                android:hint="  First Name  "
                android:textSize="19sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:background="@drawable/list"
                android:hint="  Last Name  "
                android:textSize="19sp" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Your name will be publicaly displayed on Esty.Both are \n optional"
            android:textSize="15sp"
            android:textStyle="italic" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/app_icon_size"
            android:background="@drawable/list"
            android:hint=" Your Email  "
            android:textSize="19sp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/list"
                android:hint="  Password  "
                android:textSize="19sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:background="@drawable/list"
                android:hint="  Confrim Pass..  "
                android:textSize="19sp" />


        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/app_icon_size"
            android:background="@drawable/list"
            android:hint=" UserName  "
            android:textSize="19sp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="By Registering you confrimthat you accept our"
            android:textSize="15sp"
            android:textStyle="italic" />

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:background="@drawable/btregi"
            android:text="Registery"
            />

    </LinearLayout>


</RelativeLayout>
